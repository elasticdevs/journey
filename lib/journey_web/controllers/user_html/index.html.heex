<div class="w3-container">
  <h2>Users</h2>
</div>

<div class="w3-container">
  <input
    type="text"
    id="search"
    placeholder="Search ..."
    class="w3-input w3-border"
    style="width:30%"
  />
  <div id="search-results-info" class="w3-serif w3-margin-bottom">
    Showing <span id="users_count_id"><%= length(@users) %></span> / <%= length(@users) %>
  </div>
</div>

<div class="w3-container">
  <.users_table search_count_id="users_count_id" users={@users} />
</div>
